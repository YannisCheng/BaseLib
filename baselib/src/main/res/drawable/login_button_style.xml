<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <!--<gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ECECEC" />-->

            <stroke android:width="1px" android:color="#1976D2"/>

            <corners android:radius="100px"/>
            <solid android:color="#1976D2"/>
            <!--<padding android:bottom="0px" android:left="5px" android:right="5px" android:top="0px" />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <!--<gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />-->

            <stroke android:width="1px" android:color="#1976D2"/>

            <solid android:color="#1976D2"/>
            <corners android:radius="0px"/>

            <!--<padding android:bottom="0px" android:left="5px" android:right="5px" android:top="0px" />-->
        </shape>
    </item>
    <item>
        <shape>
            <!--<gradient android:angle="270" android:endColor="#ECECEC" android:startColor="#ffffff" />-->

            <stroke android:width="1px" android:color="#388CD9"/>

            <corners android:radius="100px"/>
