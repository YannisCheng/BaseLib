<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_loading_dialog"
              android:gravity="center"
              android:minHeight="180px"
              android:minWidth="540px"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="30px">


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        />
    <!--android:indeterminateDrawable="@drawable/loading_dialog_progressbar"-->


    <TextView
        android:visibility="visible"
        android:id="@+id/show_waring"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/ic_warning_red_700_24dp"/>

    <TextView
        android:autoSizeMaxTextSize="48px"
        android:id="@+id/id_tv_loading_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:text="加载中……"
        android:textSize="48px"/>

</LinearLayout>