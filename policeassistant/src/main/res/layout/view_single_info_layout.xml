<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_info_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/single_info"
    android:background="@drawable/persional_single_bg_selector"
    android:clickable="true"
    android:paddingLeft="@dimen/margin64"
    android:paddingRight="@dimen/margin64">

    <ImageView
        android:id="@+id/single_img_left"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/single_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_size"
        android:layout_alignTop="@+id/single_img_left"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/single_img_left"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="巴拉巴拉巴拉巴拉"/>

    <ImageView
        android:id="@+id/single_img_right"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"/>

</com.zhy.autolayout.AutoRelativeLayout>
